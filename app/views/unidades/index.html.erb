<script Language="JavaScript">
function Imprimir(){
window.print();
}
</script>
<style media="print">
.botao {
display: none;
}
</style>
<div id="conteudo">
  <div class="botao">
    <table width="100%">
      <tr>
          <% form_tag unidades_path, :method => 'get' do %>
           <p>
             <tr>
                <td align="right"> Nome da Unidade:
                 <%= text_field_tag :search, params[:search] %>
                 <%= submit_tag "Filtrar", :name => nil %> </td>
              </tr>
           </p>
          <% end %>

      </tr>
    </table>
  </div>

<div class="botao">
    <br/>
  <input type="Button" Value="Imprimir" onclick="Imprimir()">
   <br/>
  <br/>
  </div>
  <fieldset>
   <legend><font size=4>Unidades</font></legend>
   <table border ="1" cellpadding="5" cellspacing="1" width="100%"  >
      <tr>
        <td colspan="8">
          <h1 align="center">Relatório de Unidades</h1>
        </td>
      </tr>
      <tr>
        <th bgcolor="#cccccc">Localização</th>
        <th bgcolor="#cccccc">Nome</th>
        <th bgcolor="#cccccc">Tipo de Ensino</th>
        <th bgcolor="#cccccc" colspan="3"></th>
      </tr>
      <% for unidade in @unidades %>

        <tr>
          <td><center><%=h unidade.regiao.nome %></center></td>
          <td><center><%=h unidade.nome %></center></td>
          <td><center><%=h unidade.nome_tipo %></center></td>
          <div class="botao">
            <td bgcolor="#cccccc"><%= link_to 'Exibir', unidade %></td>
            <td bgcolor="#cccccc"><%= link_to 'Alterar', edit_unidade_path(unidade) %></td>
            <td bgcolor="#cccccc"><%= link_to 'Apagar', unidade, :confirm => 'Tem certeza?', :method => :delete %></td>
          </div>
         </tr>
      <% end %>
    </table>
  </fieldset>
 <br />
<div class="botao">
  <br/>
 <input type="Button" Value="Imprimir" onclick="Imprimir()">  
</div>
</div>