<div id="conteudo">
  <h1 align="center">Anuncios cadastrados</h1>

  <table border="1" width="100%" class="relatorios">
    <tr align="center">
      <th>Mensagem</th>
      <th>Inicio em</th>
      <th>TÃ©rmino em</th>
    </tr>

  <% @announcements.each do |announcement| %>
    <tr align="center">
      <td><%= announcement.message %></td>
      <td><%=h announcement.starts_at.strftime("%d/%m/%y %H:%M").to_s %></td>
      <td><%=h announcement.ends_at.strftime("%d/%m/%y %H:%M").to_s %></td>
      <td><%= link_to 'Exibir', announcement, :class =>'botao3d' %></td>
      <td><%= link_to 'Alterar', edit_announcement_path(announcement), :class =>'botao3d' %></td>
      <td><%= link_to 'Apagar', announcement, :confirm => 'Confirma?', :method => :delete, :class =>'botao3d' %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'Cadastrar Novo', new_announcement_path, :class => 'botao3d' %>
</div>