<div id="conteudo">
  <p>
    <b>Mensagem:</b>
    <%= @announcement.message %>
  </p>

  <p>
    <b>Inicio em:</b>
    <%=h @announcement.starts_at.strftime("%d/%m/%y %H:%M").to_s %>
  </p>

  <p>
    <b>Termino em:</b>
    <%=h @announcement.ends_at.strftime("%d/%m/%y %H:%M").to_s %>
  </p>


  <%= link_to 'Edit', edit_announcement_path(@announcement) %> |
  <%= link_to 'Back', announcements_path %>
</div>