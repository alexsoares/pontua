<div id="conteudo">
  <div class="botao">
    <table width="100%">
      <tr>
        <% form_for @search do |f| %>
          <tr>
            <td align="right">
              <%= f.label :matricula_equals, "Matricula" %>
              <%= f.text_field :matricula_equals, :size => 10 %>              
              <%= f.label :nome_like, "Nome" %>
              <%= f.text_field :nome_like, :size => 10 %>
            </td>
            <td align="center" colspan="2">
              <%= f.submit "Buscar" %>
            </td>
          </tr>
        <% end %>
      </tr>
    </table>
  </div>

    <div class="botao">
      <input type="Button" Value="Imprimir" onclick="Imprimir()">
      <br/>
      <br/>
    </div>
    <fieldset>
      <legend><font size=5>Professor</font></legend>
      <table border ="1" class="tabelas" >
        <tr>
          <td colspan="14">
            <h1 align="center">Relat√≥rio de Professores</h1>
          </td>
        </tr>
        <tr>
          <th colspan="3" ><%= sortable params[:search],"nome" %></th>
          <th colspan="1" ><%= sortable params[:search],"matricula" %></th>
          <th colspan="2" ><%= sortable params[:search],"dt_ingresso" %></th>
          <th colspan="1" ><%= sortable params[:search],"sede_id"%></th>
          <th colspan="3" ><%= sortable params[:search],"funcao"%></th>
          <th colspan="4" class="botao"></th>
        </tr>
        <% for professor in @professors %>
          <tr>
            <td colspan="3"><center><%=h professor.nome.upcase %></center></td>
            <td colspan="1"><center><%=h professor.matricula %></center></td>
            <%if professor.dt_ingresso.nil? then %>
              <td colspan="2"><center><%=h professor.dt_ingresso %></center></td>
            <%else%>
              <td colspan="2"><center><%=h professor.dt_ingresso.strftime("%d/%m/%y") %></center></td>
            <%end%>
            <td colspan="1"><center><%=h professor.unidade.nome %></center></td>
            <td colspan="3"><center><%=h professor.funcao %></center></td>
              <td class="botao"><%= link_to 'Ficha', professor_fichas_path(professor),:class=>"botao3d" %></td>
              <td class="botao"><%= link_to 'Exibir', professor,:class=>"botao3d" %></td>
              <td class="botao"><%= link_to 'Alterar', edit_professor_path(professor),:class=>"botao3d" %></td>
              <%  if current_user.has_role?('admin') or current_user.has_role?('supervisao') or current_user.has_role?('planejamento') then%>
                <td class="botao"><%= link_to 'Apagar', professor, :confirm => 'Tem certeza?', :method => :delete,:class=>"botao3d" %></td>
              <%end%>
          </tr>
        <% end %>
      </table>
    </fieldset>
    <br/>
    <b><%=  @professors.count %> registros encontrados nesta pagina</b>
    <div class="botao">
      <br/>
      <%= will_paginate @professors %>
      <input type="Button" Value="Imprimir" onclick="Imprimir()">
    </div>
    <br/>
    <br/>
  </div>

