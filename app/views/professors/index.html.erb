<div id="conteudo">
  <div class="botao">
    <table width="100%">
      <tr>
          <% form_tag professors_path, :method => 'get' do %>
           <p>
            <tr>
                <td align="right"> Nome do Professor:
                 <%= text_field_tag :search, params[:search] %>
                 <%= submit_tag "Filtrar", :name => nil %></td>
              </tr>
           </p>
          <% end %>
        
      </tr>
    </table>
  </div>

<div class="relatorios">
<div class="botao">
   <input type="Button" Value="Imprimir" onclick="Imprimir()">
   <br/>
  <br/>
</div>
  <fieldset>
    <legend><font size=5>Professor</font></legend>
   <table border ="1" cellpadding="5" cellspacing="1" width="100%" frame="box" rules="all" >
      <tr>
        <td colspan="8">
          <h1 align="center">Relatório de Professores</h1>
        </td>
      </tr>
    <tr>
      <th bgcolor="#cccccc">Nome</th>
      <th bgcolor="#cccccc">Matrícula</th>
      <th bgcolor="#cccccc">Data Ingresso</th>
      <th bgcolor="#cccccc">Sede</th>
      <th bgcolor="#cccccc">Função</th>
      <th colspan="3" bgcolor="#cccccc"></th>


    </tr>

<% for professor in @professors %>

  <tr>
    <td><center><%=h professor.nome.upcase %></center></td>
    <td><center><%=h professor.matricula %></center></td>
    <%if professor.dt_ingresso.nil? then %>
      <td><center><%=h professor.dt_ingresso %></center></td>
    <%else%>
      <td><center><%=h professor.dt_ingresso.strftime("%d/%m/%y") %></center></td>
    <%end%>
    <td><center><%=h Unidade.find(professor.sede_id).nome %></center></td>
    <td><center><%=h professor.funcao %></center></td>
    <td><div class="botao3d"><%= link_to 'Exibir', professor %></div></td>
    <td><div class="botao3d"><%= link_to 'Alterar', edit_professor_path(professor) %></div></td>
<%  if current_user.has_role?('admin') or current_user.has_role?('supervisao') or current_user.has_role?('planejamento') then%>
    <td><div class="botao3d"><%= link_to 'Apagar', professor, :confirm => 'Tem certeza?', :method => :delete %></div></td>
<%end%>
  </tr>
<% end %>


    </table>

  </fieldset>
 <br />
   <b><%=  @professors.count %> registros encontrados</b>


  <div class="botao">
    <br/>
    <input type="Button" Value="Imprimir" onclick="Imprimir()">
  </div>
  <br/>
  <br/>
  </div>
</div>
